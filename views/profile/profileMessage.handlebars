<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Messaging Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/public/css/group-details.css" />
  </head>
  <body data-user-id="{{_id}}">
    <div class="container mt-5">
      <h1 class="text-center">Messaging</h1>
      <div class="row mt-4">
        <div class="col-md-4">
          <h3>Conversations</h3>
          <ul class="list-group">
            {{#each conversations}}
              <li
                class="list-group-item"
                onclick="loadConversation('{{this.id}}')"
              >{{this.fullName}}</li>
            {{/each}}
          </ul>
        </div>
        <div class="col-md-8">
          <h3>Message</h3>
          <div
            id="messages-container"
            class="messages border p-3"
            style="height: 300px; overflow-y: scroll;"
          >
            {{#each messages}}
              <div class="message">
                <p>{{message}}</p>
              </div>
            {{/each}}
          </div>
          <form
            action="/profile/{{_id}}/messaging"
            method="POST"
            id="send-message"
          >
            <label for="messageInput">Message</label>
            <input id="messageInput" type="textarea" name="messageInput" />
            <select name="connection" id="userConnections">
              {{#each userFullNames}}
                <option value="{{this.id}}">{{this.fullName}}</option>
              {{/each}}
            </select>
            <input type="submit" value="Send" />
          </form>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script src="/public/js/messaging.js"></script>
    <a href="/profile/{{_id}}">Back to Profile</a>
  </body>
</html>