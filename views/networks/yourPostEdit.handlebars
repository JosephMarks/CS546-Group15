<h1 style="color: rgb(255, 255, 255); background-color: #d28200;">{{h1}}</h1>
<div class="container">
    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark">
        <div class="container-fluid">
            <img src="/public/images/aboutUs.png" alt="Logo" width="30" height="30"
                class="d-inline-block align-text-top">
            <a class="navbar-brand mb-0" href=""> &nbsp; Better Interview Book</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/network/post/{{userId}}">Post</a>
                        {{!--/network/post/{{id}}--}}
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Your Follower
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/network/follower/{{userId}}">Get & Remove Your
                                    Connections
                                    Info.</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/network/follower/{{userId}}/create">Create New
                                    Connections</a>
                            </li>

                        </ul>
                    </li>
                    <li class="nav-item">
                        <form style="display: inline" action="/network/post/{{userId}}/new" method="get">
                            <button id="network-new-post-button" class="nav-link btn btn-outline-primary"
                                style="--bs-btn-padding-y: .01rem; --bs-btn-padding-x: .2rem; --bs-btn-font-size: .4rem;">
                                Create New Post
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {{!-- --}}
    <br>
    {{!-- Edit --}}
    <div class="card" style="width: 50%;">
        <div class="card-body">
            <div class="text-center">
                <h2 class="card-subtitle mb-2 badge bg-primary text-wrap fs-6">Post Content</h2>
            </div>
            <p class="card-title">{{post.content}}</p>
        </div>

        <form method="POST" id="network-post-edit">
            <!-- Add a hidden input field with the _method attribute set to PATCH -->
            <h2 class="card-subtitle mb-2 badge text-wrap fs-6" style="background-color: #03266D;">Change Your Post</h2>
            <label for="network-post-update"></label>
            <div class="input-group input-group-lg">
                <input type="hidden" name="_method" value="patch">
                <input type="text" id="content" name="content" class="form-control" aria-label="Large"
                    aria-describedby="inputGroup-sizing-sm" value="{{post.content}}">
            </div>
            <br>
            <button id="your-post-edit-button" type="submit">Update</button>
        </form>
        <div id="error"></div>
        {{error}}
    </div>
</div>