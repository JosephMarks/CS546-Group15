      <div class="container-fluid">

        <a class="navbar-brand" href="/">Better Interview Book</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">

            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Ruobing Liu
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/socialmediaposts">Social
                    Media Post</a></li>
                <li><a class="dropdown-item" href="/referral">Refer a Job
                  </a></li>
              </ul>
            </li>

            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Joe Marks
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/groups">Groups</a></li>
                <li><a class="dropdown-item" href="/team">Team</a></li>
              </ul>
            </li>

            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Tzu-Ming Lu
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/network">Network</a></li>
                <li><a
                    class="dropdown-item"
                    href="/skills"
                  >Skills/Learning</a></li>
              </ul>
            </li>

            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Pradyumn
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/logIn">LogIn</a></li>
                <li><a class="dropdown-item" href="/signUp">signUp</a></li>
                <li><a class="dropdown-item" href="/company">company</a></li>
                <li><a class="dropdown-item" href="/recommendation">recommendation</a></li>
              </ul>
            </li>

          </ul>

          {{#if status}}

            <ul class="navbar-nav ms-auto">
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  {{userName}}
                </a>

                {{#if status}}
                  <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/profile/{{userId}}">My
                        Profile</a></li>
                    <li><a class="dropdown-item" href="/logout">Logout</a></li>
                  </ul>
                {{/if}}

              </li>
            </ul>
          {{/if}}

        </div>

      </div>
