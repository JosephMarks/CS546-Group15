<link rel="stylesheet" href="/css/group-details.css" />

<div class="container">
  <h1>Group Details</h1>
  <div>
    <a href="javascript:history.back();">Back to Search Results</a>

    {{#if image}}
      <img src="data:image/png;base64,{{image}}" alt="Group Image" />
    {{/if}}

    <form action="/groups/{{_id}}" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Name</label>
        <input
          type="text"
          name="name"
          id="name"
          class="form-control"
          value="{{name}}"
        />
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea
          name="description"
          id="description"
          class="form-control"
        >{{description}}</textarea>
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        <input type="file" name="image" id="image" class="form-control-file" />
      </div>
      <input type="submit" value="Save" class="btn btn-primary" />
    </form>
  </div>
</div>